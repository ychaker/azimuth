<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%= @page_title || APP_CONFIG[:site_name] %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />

    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
		<%= stylesheet_link_tag 'base', 'main' %>
		<%= javascript_include_tag 'jquery', 'ui' %>
	</head>
	
  <!-- Begin Body -->
	<body>
	  <!-- Begin Container -->
		<div id="container">
		  <!-- Begin Header -->
			<div id="header">
			  <!-- Begin User Box -->
  		  <%= render :partial => "partials/user_box" %>
  		  <!-- End User Box -->

        <%= tabnav :main %>        
			</div>
			<!-- End Header -->
			
			<!-- Begin Notices -->
			<div id="notice">
			  <%= flash_messages %>
			</div>
			<!-- End Notices -->
			
			<!-- Begin Content -->
			<div id="content">
				<%= yield :layout %>
			</div>
			<!-- End Content -->
			
			
    </div>
    <!-- End Container -->
    
    <!-- Begin Footer -->
    <div id="footer">
      <div style="padding: 20px; padding-top: 55px; color: white;">
          <p style="text-align: center; padding-top: 10px">This Application was built as part of the <a style="color: #95a5c6" href="http://www.railsrumble.com">Rails Rumble 2008</a> Contest.</p>
      </div>
		</div>
		<!-- End Footer -->
		
	</body>
	<!-- End Body -->
</html>