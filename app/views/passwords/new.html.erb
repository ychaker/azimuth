<%= title "Forgot Your Password?", :h2 %>
<div id="forgot-pass-box">
<% form_for @password do |f| %>
  <%= f.error_messages %>
	<fieldset>
		<legend>Enter Your Email Address</legend>
		<ul>
			<li>			
		    <%= f.label :email %>
		    <%= f.text_field :email %>
			</li>
		</ul>
	</fieldset>
	<div class="buttons">
  	<%= f.submit "Submit" %>
	</div>
<% end %>
</div>

